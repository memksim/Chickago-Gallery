<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_normal_16_light_grey" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="button_basic" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">@dimen/spacing_8</item>
        <item name="android:paddingTop">@dimen/spacing_8</item>
        <item name="cornerRadius">@dimen/corners_radius_6</item>
    </style>

    <style name="text_normal_16_grey" parent="Widget.MaterialComponents.TextView">
        <item name="color">@color/text_color</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_bold_16_grey" parent="Widget.MaterialComponents.TextView">
        <item name="color">@color/text_color</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_bold_18_black" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="toolbar_style" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/toolbar_color</item>
        <item name="titleTextStyle">@dimen/text_18</item>
    </style>

    <style name="text_normal_18_black" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_normal_14_black" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_bold_20_black" parent="Widget.MaterialComponents.TextView">\
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_20</item>
    </style>

    <style name="text_bold_24_black" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_bold_16_black" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_normal_16_black" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>