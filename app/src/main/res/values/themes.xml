<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChickagoGallery" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="ButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">@dimen/padding_8dp</item>
        <item name="android:paddingTop">@dimen/padding_8dp</item>
        <item name="cornerRadius">@dimen/corners_radius_6dp</item>
    </style>

    <style name="InfoTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="color">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TitleTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="color">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/toolbar_color</item>
        <item name="titleTextStyle">@dimen/text_size_18sp</item>
    </style>

    <style name="SearchViewText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/search_text_color</item>
    </style>

    <style name="ArtworkTitleTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ArtworkInfoTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NothingToShowTitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="ArtworkInfoPageNameTitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ArtworkInfoPageInfoTitleTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ArtworkInfoPageInfoTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>